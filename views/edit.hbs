<form action='/lists/{{list._id}}?_method=PUT' method='POST' class='col col-lg-6 mx-auto mt-5'>
  <ul class='list-group'>
    {{#each displayList}}
    <li class='list-group-item d-flex'>
      <h3 class='col col-lg-4'>{{@key}}</h3>
      <input class='form-control' type='text' name='{{@key}}' value='{{this}}' required />
    </li>
    {{/each}}
    <button class='btn btn-info' type='submit'>Save</button>
  </ul>
</form>




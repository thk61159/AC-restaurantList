<div class='container d-flex justify-content-around'>
  <!-- search bar -->
  <div class=' search-bar'>
    <div class='search-bar-outer'>
      <div class='search-bar-inner'>
        <form action='/search'>
          <h4 class='mb-2'>尋找餐廳：</h4>
          <div class='input-group'>
            <input type='text' name='keyword' class='form-control' placeholder='輸入餐廳、分類' aria-label='Restaurant Name...'
              value='{{keyword}}' aria-describedby='search-button' />
            <button class='btn btn-major' type='submit' id='search-button'><i class='fas fa-search'></i></button>

          </div>
        </form>
      </div>
    </div>
  </div>
  <!-- sort bar -->
  <div class='dropdown'>
    <form action='/sort' method='get'>
      <select class='form-select' aria-label='Default select example' name='sortMethod' onchange='this.form.submit()' >
        <option selected>{{#if sortMethod}}{{sortMethod}}{{else}}Open this select menu{{/if}}</option>
        <option value='alphabet'>字母排序</option>
        <option value='category'>類別</option>
        <option value='region'>地區</option>
        <option value='score'>分數</option>
      </select>
    </form>
  </div>
</div>

<!-- restaurant list -->
<div class='container mt-5'>
  <div class='row'>
    <div class='col-md-10 col-12 mx-auto'>
      <div class='row row-cols-sm-3'>
        {{#each list}}
        <a href='./restaurants/{{this._id}}' class='text-secondary' style='text-decoration:none'>
          <div class='card mb-3'>
            <img class='card-img-top' src='{{this.image}}' alt='{{this.name}}' />
            <div class='card-body p-3'>
              <h6 class='card-title mb-1'>{{this.name}}</h6>

              <div class='restaurant-category mb-1'>
                <i class='fas fa-utensils pr-2'></i>
                {{this.category}}
              </div>

              <span class='badge badge-pill badge-danger font-weight-normal text-dark btn'>
                {{this.rating}}
                <i class='fas fa-star fa-xs text-warning'></i>
              </span>
              <span class='text-info btn'>detail</span>
              <form action='/restaurants/{{this._id}}/edit' method='get' style='display: inline;'><button type='submit'
                  class='text-info btn'><i class='fa-solid fa-pen'></i>
                </button></form>
              <form action='/restaurants/{{this._id}}?_method=DELETE' method='POST' style='display: inline;'>
                <button type='submit' class='text-danger btn'><i class='fa-solid fa-trash'></i>
                </button>

              </form>
            </div>
          </div>
        </a>
        {{/each}}
        <a href='./restaurants/newItem' class='text-secondary'>
          <div class='card mb-3'>
            <img class='card-img-top figure-img img-fluid'
              src='https://raw.githubusercontent.com/thk61159/AC-restaurantList/master/%E5%9C%96%E7%89%87%201.png'
              alt='按一下新增餐廳' />
            <div class='card-body p-3'>
              <h6 class='card-title mb-1'>按一下新增餐廳</h6>

              <div class='restaurant-category mb-1'>
                <i class='fas fa-utensils pr-2'></i>
                -
              </div>

              <span class='badge badge-pill badge-danger font-weight-normal'>
                -
                <i class='fas fa-star fa-xs'></i>
              </span>

            </div>
          </div>
        </a>

      </div>
    </div>
  </div>
</div>